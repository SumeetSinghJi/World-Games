{
    "tasks": [
        {
            /*
                For G++ compiler (part of MingW GNU)
                Windows: to use install MingW in default location and create environmental variable: C:\msys64\mingw64\bin\
                MacOS: n/a MingW is Windows only
            */ 
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file", // linked to GDB debugger in launch.json
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/src/SDL2/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_image/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_Mixer/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_TTF/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/curl/include/curl",
                "-I${workspaceFolder}/src/libzip/lib",
                "-I${workspaceFolder}/src/googletest/googletest/include",
                "-g",
                "${file}",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}.exe",
                "-L${workspaceFolder}/src/SDL2/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/src/SDL2_Image/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/src/SDL2_Mixer/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/src/SDL2_TTF/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/src/curl/lib",
                "-L${workspaceFolder}/src/libzip",
                "-L${workspaceFolder}/src/googletest/build/lib",
                "-lzip",
                "-lcurl",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lgtest",
                "-lgtest_main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            /*
                Static Analyser similar to clang tidy
                Windows: to use install cppcheck in default location and create environmental variable: C:\Program Files\Cppcheck
                MacOS: nothing extra required

                Can be run in CLI with one line command when in project folder e.g;
                
                cppcheck --enable=all --inconclusive 
                --std=c++17 'C:\Users\TESTUSER\Documents\Ancient Games/src/*.cpp' 'C:\Users\TESTUSER\Documents\Ancient Games/headers/*.hpp' 
                --suppress=missingIncludeSystem:*
            
            */
            "label": "C/C++: Run cppcheck",
            "type": "shell",
            "command": "cppcheck",
            "args": [
                "--enable=all",
                "--inconclusive",
                "--std=c++17",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/headers/*.hpp",
                "--suppress=missingIncludeSystem:*" // supress all cppcheck headers not found warning, using wildcard *
            ],
            "problemMatcher": {
                "owner": "cppcheck",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s*(warning|error):\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        },
        {   
            /* 
                For Clang++ compiler as part of LLVM
                Windows: to use install LLVM in default location and create environmental variable: C:\Program Files\LLVM\bin
                MacOS: Install LLVM to default location

            */
            "type": "shell",
            "label": "C/C++: clang++ build active file", // linked to LLDB debugger in launch.json
            "command": "clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/src/SDL2/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_image/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_Mixer/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_TTF/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/curl/include/curl",
                "-I${workspaceFolder}/src/libzip/lib",
                "-I${workspaceFolder}/src/googletest/googletest/include",
                "-g",
                "${file}",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}.exe",
                "-L${workspaceFolder}/src/SDL2/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/src/SDL2_Image/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/src/SDL2_Mixer/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/src/SDL2_TTF/x86_64-w64-mingw32/lib",
                "-L${workspaceFolder}/src/curl/lib",
                "-L${workspaceFolder}/src/libzip",
                "-L${workspaceFolder}/src/googletest/build/lib",
                "-lzip",
                "-lcurl",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lgtest",
                "-lgtest_main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        { 
            /*
                Static analyser that comes with LLVM similar to cppchecker
                Windows: to use install LLVM in default location and create environmental variable: C:\Program Files\LLVM\bin
                MacOS: Install LLVM to default location
            */
            "label": "C/C++: clang-tidy",
            "type": "shell",
            "command": "clang-tidy",
            "args": [
                "${file}",
                "-checks=*",
                "-header-filter=.*",
                "-warnings-as-errors=*",
                "--",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/src/SDL2/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_image/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_Mixer/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/SDL2_TTF/x86_64-w64-mingw32/include/SDL2",
                "-I${workspaceFolder}/src/curl/include/curl",
                "-I${workspaceFolder}/src/libzip/lib",
                "-I${workspaceFolder}/src/googletest/googletest/include"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ],
    "version": "2.0.0"
}